@section Scripts {

    <script src="~/app-assets/vendors/js/tables/datatable/datatables.min.js"></script>
    <script src="~/app-assets/vendors/js/tables/datatable/dataTables.responsive.min.js"></script>
    <script src="~/app-assets/vendors/js/tables/buttons.colVis.min.js"></script>
    <script src="~/app-assets/vendors/js/tables/datatable/dataTables.colReorder.min.js"></script>
    <script src="~/app-assets/vendors/js/tables/datatable/dataTables.buttons.min.js"></script>
    <script src="~/app-assets/vendors/js/tables/datatable/buttons.bootstrap4.min.js"></script>
    <script src="~/app-assets/vendors/js/tables/datatable/dataTables.fixedHeader.min.js"></script>
    <script src="~/app-assets/vendors/js/extensions/sweetalert2.all.min.js"></script>
    <script src="~/assets/js/zebra.js"></script>

    <script>

        $(document).ready(function() {
            var data = [];

	        @foreach (var d in Model.Warehouses)
	        {
		        @:data.push(["@d.Id", "@d.Name", "<a class=\"btn btn-icon btn-info mr-1 mb-1 waves-effect waves-light\" href=\"/Asset/Detail?id=@d.Id\" data-toggle=\"tooltip\" data-placement=\"top\" title=\"Detalhes\"><i class=\"la la-info-circle\" style=\"color: white;\"></i></a><a class=\"btn btn-icon btn-warning mr-1 mb-1 waves-effect waves-light\" href=\"/Asset/Edit?id=@d.Id\" data-toggle=\"tooltip\" data-placement=\"top\" title=\"Editar\"><i class=\"la la-edit\" style=\"color: white;\"></i></a> <a class=\"btn btn-icon btn-danger mr-1 mb-1 waves-effect waves-light btnDeleteAsset\" data-id=\"@d.Id\" data-toggle=\"tooltip\" data-placement=\"top\" title=\"Eliminar\"><i style=\"color: white;\" class=\"la la-close\"></i></a> "]);
	        }

            //console.log(data);

            $('#tableFinish').DataTable({
                data:           data,
                deferRender:    true,
                scrollY:        550,
                scrollCollapse: true,
                scroller:       true
            });
        });

        $('.btnEditWarehouse').on('click',
            function (e) {
                var id = $(this).attr('data-id');
                e.preventDefault();
                $.getJSON('Warehouse/WarehouseInfo?id=' + id,
                    function (data) {
                        $('#editName').val(data.data2);
                    });
                e.preventDefault();
            });


        $('.btnDeleteWarehouse').on('click',
            function (e) {
                var id = $(this).attr('data-id');
                Swal.fire({
                    title: 'Tem a certeza?',
                    text: "Não poderá voltar atrás!",
                    type: 'warning',
                    showCancelButton: true,
                    confirmButtonColor: '#3085d6',
                    cancelButtonColor: '#d33',
                    confirmButtonText: 'Eliminar!',
                    confirmButtonClass: 'btn btn-primary',
                    cancelButtonClass: 'btn btn-danger ml-1',
                    buttonsStyling: false,
                }).then(function (result) {
                    if (result.value) {
                        $.ajax({
                            type: "GET",
                            url: 'Warehouse/Delete?id=' + id,
                            dataType: "json",
                            contentType: "application/json; charset=utf-8"
                        });
                        Swal.fire({
                            type: "success",
                            title: 'Eliminado!',
                            text: 'Warehouse eliminado com sucesso.',
                            confirmButtonClass: 'btn btn-success'
                        }).then(function (result) {
                            if (result.value) {
                                location.href = 'Warehouse';
                            }
                        });
                    }
                });
            });

        $(document).on('click',
            '.btnDeleteAsset',
            function (e) {
                Swal.fire({
                    title: 'Tem certeza?',
                    text: "Não poderá reverter isso!",
                    type: 'warning',
                    showCancelButton: true,
                    confirmButtonColor: '#3085d6',
                    cancelButtonColor: '#d33',
                    confirmButtonText: 'Sim, eliminar!',
                    cancelButtonText: 'Não'
                }).then((result) => {
                    if (result.value) {
                        const id = $(this).attr('data-id');
                        window.location.href = '/AssetFinished?id=' + id + '&handler=Delete';
                    }
                });
            });

        //var element = document.getElementById("finalizados");
        //element.classList.add("active");
    </script>
}