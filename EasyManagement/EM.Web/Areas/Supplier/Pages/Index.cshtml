@page "{handler?}/{id?}"
@model EM.Web.Areas.Supplier.Pages.IndexModel
@{
    ViewData["Title"] = "Fornecedores";
}

@section Styles {
    <link rel="stylesheet" type="text/css" href="~/app-assets/vendors/css/tables/datatable/datatables.min.css">
    <link rel="stylesheet" type="text/css" href="~/app-assets/vendors/css/tables/extensions/responsive.dataTables.min.css">
    <link rel="stylesheet" type="text/css" href="~/app-assets/vendors/css/tables/extensions/colReorder.dataTables.min.css">
    <link rel="stylesheet" type="text/css" href="~/app-assets/vendors/css/tables/extensions/buttons.dataTables.min.css">
    <link rel="stylesheet" type="text/css" href="~/app-assets/vendors/css/tables/datatable/buttons.bootstrap4.min.css">
    <link rel="stylesheet" type="text/css" href="~/app-assets/vendors/css/tables/extensions/fixedHeader.dataTables.min.css">
    <link rel="stylesheet" type="text/css" href="~/app-assets/vendors/css/extensions/sweetalert2.min.css">

    <style>
        .dataTables_scrollBody {
            overflow-x: hidden;
        }
    </style>
}

<section id="fornecedores">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h4 class="card-title">Fornecedores</h4>
                    <a class="heading-elements-toggle"><i class="la la-ellipsis-v font-medium-3"></i></a>
                    <div class="heading-elements">
                        <ul class="list-inline mb-0">
                            <li><a data-action="collapse"><i class="ft-minus"></i></a></li>
                            <li><a data-action="expand"><i class="ft-maximize"></i></a></li>
                            <li><a data-action="close"><i class="ft-x"></i></a></li>
                        </ul>
                    </div>
                </div>
                <div class="card-content collapse show">
                    <div class="card-body card-dashboard">
                        <table id="tableFinish" class="table table-striped" style="width: 100%">
                            <thead>
                            <tr>
                                <th>NIF</th>
                                <th>Empresa</th>
                                <th>Nome Comercial</th>
                                <th>Telemovel</th>
                                <th>Email</th>
                                <th>Comandos</th>
                            </tr>
                            </thead>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<div class="buy-now">
    <a class="btn btn-info btn-glow round px-2" data-toggle="modal" data-target="#createSupplierModal" style="color: white;">Adicionar Fornecedor</a>
</div>


<div class="modal fade text-left" id="createSupplierModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel34" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h4> Adicionar Fornecedor</h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close" style="color: black;">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <form class="form" method="post">
                <div class="modal-body">
                    <div class="row">
                        <div class="col-lg-12 col-md-12">
                            <div class="form-group">
                                <label for="nomeCampo">NIF</label>
                                    <input asp-for="CreateSupplier.Nif" type="text" class="form-control input-lg" placeholder="Contribuinte" required />
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-lg-12 col-md-12">
                            <div class="form-group">
                                <label for="nomeCampo">Nome Empresa</label>
                                    <input asp-for="CreateSupplier.Name" type="text" class="form-control input-lg" placeholder="Nome Empresa" required />
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-lg-12 col-md-12">
                            <div class="form-group">
                                <label for="nomeCampo">Morada</label>
                                    <input asp-for="CreateSupplier.Address1" type="text" class="form-control input-lg" placeholder="Morada" />
                                <input asp-for="CreateSupplier.Address2" type="text" class="form-control input-lg" placeholder="Morada"/>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-lg-6 col-md-12">
                            <div class="form-group">
                                <label for="nomeCampo">Codigo Postal</label>
                                    <input asp-for="CreateSupplier.PostalCode" type="text" class="form-control input-lg" placeholder="4700-000" />
                            </div>
                        </div>
                        <div class="col-lg-6 col-md-12">
                            <div class="form-group">
                                <label for="nomeCampo">Distrito</label>
                                    <input asp-for="CreateSupplier.City" type="text" class="form-control input-lg" placeholder="Braga" />
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-lg-12 col-md-12">
                            <div class="form-group">
                                <label for="nomeCampo">Nome Comercial</label>
                                    <input asp-for="CreateSupplier.NameComercial" type="text" class="form-control input-lg" placeholder="Nome Comercial" />
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-lg-4 col-md-12">
                            <div class="form-group">
                                <label for="nomeCampo">Contacto Comercial</label>
                                    <input asp-for="CreateSupplier.ContactComercial" type="text" class="form-control input-lg" placeholder="Contacto Comercial" />
                            </div>
                        </div>
                        <div class="col-lg-8 col-md-12">
                            <div class="form-group">
                                <label for="nomeCampo">Email Comercial</label>
                                    <input asp-for="CreateSupplier.EmailComercial" type="text" class="form-control input-lg" placeholder="Email Comercial" />
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <input type="reset" class="btn btn-outline-secondary btn-lg" data-dismiss="modal" value="Fechar">
                    <input type="submit" class="btn btn-outline-primary btn-lg" value="Guardar">
                </div>
            </form>
        </div>
    </div>
</div>


    <div class="modal fade text-left" id="editSupplierModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel34" aria-hidden="true">
        <div class="modal-dialog modal-lg" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h4> Editar Fornecedor</h4>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close" style="color: black;">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <form class="form" method="post" asp-page-handler="edit">
                    <div class="modal-body">
                        <div class="row">
                            <div class="col-lg-12 col-md-12">
                                <div class="form-group">
                                    <label>NIF</label>
                                    <input name="EditSupplier.Nif" id="editNif" type="text" class="form-control input-lg" placeholder="Contribuinte" readonly />
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-lg-12 col-md-12">
                                <div class="form-group">
                                    <label>Nome</label>
                                    <input name="EditSupplier.Name" id="editName" type="text" class="form-control input-lg" placeholder="Nome Empresa" required />
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-lg-12 col-md-12">
                                <div class="form-group">
                                    <label>Morada</label>
                                    <input name="EditSupplier.Address1" id="editAddress1" type="text" class="form-control input-lg" placeholder="Morada" />
                                    <input name="EditSupplier.Address2" id="editAddress2" type="text" class="form-control input-lg" placeholder="Morada" />
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-lg-6 col-md-12">
                                <div class="form-group">
                                    <label>Codigo Postal</label>
                                    <input name="EditSupplier.PostalCode" id="editPostalCode" type="text" class="form-control input-lg" placeholder="4700-000" />
                                </div>
                            </div>
                            <div class="col-lg-6 col-md-12">
                                <div class="form-group">
                                    <label>Distrito</label>
                                    <input name="EditSupplier.City" id="editCity" type="text" class="form-control input-lg" placeholder="Braga" />
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-lg-12 col-md-12">
                                <div class="form-group">
                                    <label>Nome Responsável</label>
                                    <input name="EditSupplier.NameComercial" id="editNameComercial" type="text" class="form-control input-lg" placeholder="Nome Comercial" />
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-lg-4 col-md-12">
                                <div class="form-group">
                                    <label>Contacto Responsável</label>
                                    <input name="EditSupplier.ContactComercial" id="editContactComercial" type="text" class="form-control input-lg" placeholder="Contacto Comercial" />
                                </div>
                            </div>
                            <div class="col-lg-8 col-md-12">
                                <div class="form-group">
                                    <label>Email Responsável </label>
                                    <input name="EditSupplier.EmailComercial" id="editEmailComercial" type="text" class="form-control input-lg" placeholder="Email Comercial" />
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <input type="reset" class="btn btn-outline-secondary btn-lg" data-dismiss="modal" value="Fechar">
                        <input type="submit" class="btn btn-outline-primary btn-lg" value="Guardar">
                    </div>
                </form>
            </div>
        </div>
    </div>


@section Scripts {

    <script src="~/app-assets/vendors/js/tables/datatable/datatables.min.js"></script>
    <script src="~/app-assets/vendors/js/tables/datatable/dataTables.responsive.min.js"></script>
    <script src="~/app-assets/vendors/js/tables/buttons.colVis.min.js"></script>
    <script src="~/app-assets/vendors/js/tables/datatable/dataTables.colReorder.min.js"></script>
    <script src="~/app-assets/vendors/js/tables/datatable/dataTables.buttons.min.js"></script>
    <script src="~/app-assets/vendors/js/tables/datatable/buttons.bootstrap4.min.js"></script>
    <script src="~/app-assets/vendors/js/tables/datatable/dataTables.fixedHeader.min.js"></script>
    <script src="~/app-assets/vendors/js/extensions/sweetalert2.all.min.js"></script>
    <script src="~/assets/js/zebra.js"></script>

    <script>

        $(document).ready(function() {
            var data = [];

           @foreach (var d in Model.Suppliers)
           {
                @:data.push(["@d.Nif", "@d.Name", "@d.NameComercial", "@d.ContactComercial", "@d.EmailComercial", "<a class=\"btn btn-icon btn-info mr-1 mb-1 waves-effect waves-light\" href=\"/Asset/Detail?id=@d.Nif\" data-toggle=\"tooltip\" data-placement=\"top\" title=\"Detalhes\"><i class=\"la la-info-circle\" style=\"color: white;\"></i></a>     <a class=\"btn btn-icon btn-warning mr-1 mb-1 waves-effect waves-light btnEditSupplier\" data-nif=\"@d.Nif\" data-toggle=\"modal\" data-target=\"#editSupplierModal\" data-toggle=\"tooltip\" data-placement=\"top\" title=\"Editar\"><i class=\"la la-edit\" style=\"color: white;\"></i></a> <a class=\"btn btn-icon btn-danger mr-1 mb-1 waves-effect waves-light btnDeleteSupplier\" data-nif=\"@d.Nif\" data-toggle=\"tooltip\" data-placement=\"top\" title=\"Eliminar\"><i style=\"color: white;\" class=\"la la-close\"></i></a> "]);

                //@:data.push(["@d.Nif", "@d.Name", "@d.NameComercial", "@d.ContactComercial", "@d.EmailComercial", "<a class=\"btn btn-icon btn-info mr-1 mb-1 waves-effect waves-light\" href=\"/Asset/Detail?id=@d.Nif\" data-toggle=\"tooltip\" data-placement=\"top\" title=\"Detalhes\"><i class=\"la la-info-circle\" style=\"color: white;\"></i></a>        <a class=\"btn btn-icon btn-warning mr-1 mb-1 waves-effect waves-light btnEditSupplier\" data-nif=\"@d.Nif\" data-toggle=\"modal\" data-target=\"#editSupplierModal\" data-placement=\"top\" title=\"Editar\"><i class=\"la la-edit\" style=\"color: white;\"></i></a>        <a class=\"btn btn-icon btn-danger mr-1 mb-1 waves-effect waves-light btnDeleteAsset\" data-id=\"@d.Nif\" data-toggle=\"tooltip\" data-placement=\"top\" title=\"Eliminar\"><i style=\"color: white;\" class=\"la la-close\"></i></a> "]);
           }

            $('#tableFinish').DataTable({
                data:           data,
                deferRender:    true,
                scrollY:        550,
                scrollCollapse: true,
                scroller:       true
            });

            $('.btnEditSupplier').on('click',
                function (e) {
                    var nif = $(this).attr('data-nif');
                    e.preventDefault();
                    $.getJSON('Supplier/SupplierInfo?nif=' + nif,
                        function (data) {
                            $('#editNif').val(data.data1);
                            $('#editName').val(data.data2);
                            $('#editAddress1').val(data.data3);
                            $('#editAddress2').val(data.data4);
                            $('#editPostalCode').val(data.data5);
                            $('#editCity').val(data.data6);
                            $('#editNameComercial').val(data.data7);
                            $('#editContactComercial').val(data.data8);
                            $('#editEmailComercial').val(data.data9);
                        });
                    e.preventDefault();
                });


            $('.btnDeleteSupplier').on('click',
                function (e) {
                    var nif = $(this).attr('data-nif');
                    Swal.fire({
                        title: 'Tem a certeza?',
                        text: "Não poderá voltar atrás!",
                        type: 'warning',
                        showCancelButton: true,
                        confirmButtonColor: '#3085d6',
                        cancelButtonColor: '#d33',
                        confirmButtonText: 'Eliminar!',
                        confirmButtonClass: 'btn btn-primary',
                        cancelButtonClass: 'btn btn-danger ml-1',
                        buttonsStyling: false,
                    }).then(function (result) {
                        if (result.value) {
                            $.ajax({
                                type: "GET",
                                url: 'Supplier/Delete?nif=' + nif,
                                dataType: "json",
                                contentType: "application/json; charset=utf-8"
                            });
                            Swal.fire({
                                type: "success",
                                title: 'Eliminado!',
                                text: 'Supplier eliminado com sucesso.',
                                confirmButtonClass: 'btn btn-success'
                            }).then(function (result) {
                                if (result.value) {
                                    location.href = 'Supplier';
                                }
                            });
                        }
                    });
                });


            $(document).on('click',
                '.btnDeleteAsset',
                function (e) {
                    Swal.fire({
                        title: 'Tem certeza?',
                        text: "Não poderá reverter isso!",
                        type: 'warning',
                        showCancelButton: true,
                        confirmButtonColor: '#3085d6',
                        cancelButtonColor: '#d33',
                        confirmButtonText: 'Sim, eliminar!',
                        cancelButtonText: 'Não'
                    }).then((result) => {
                        if (result.value) {
                            const id = $(this).attr('data-id');
                            window.location.href = '/AssetFinished?id=' + id + '&handler=Delete';
                        }
                    });
                });
        });





        //var element = document.getElementById("finalizados");
        //element.classList.add("active");
    </script>
}